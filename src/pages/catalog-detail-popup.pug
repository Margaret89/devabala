	.product-success
		.product-success__content
			.product-success__img-wrap
				a(href="#").product-success__img
					img(src="/upload/product-success.jpg", alt="")

			.product-success__info
				.product-success__title
					a(href="#") Бархартный топ

				.product-success__price 12 000

				.product-success-params
					.product-success-params__item M
					.product-success-params__item.product-success-params__item_color(style="background: #000")

		a(href="#").btn.btn_brown.btn_medium Перейти в корзину

	.product-success-mobile
		.product-success-mobile__close
			+svg('ic-close','ic-close', '16', '16')

		.product-success-mobile__title Товар успешно
			br
			|добавлен в корзину

		.product-success-mobile__subtitle Дополните образ

		.catalog-list
			.container
				.row
					-
						var list=[
							{img:'catalog1.jpg', text:'Бархатный топ', price:'12 000'},
							{img:'catalog2.jpg', text:'Бархатный топ', price:'9 000'},
							{img:'catalog3.jpg', text:'Бархатный топ', price:'23 000'},
							{img:'catalog4.jpg', text:'Бархатный топ', price:'12 000'},
							{img:'catalog3.jpg', text:'Бархатный топ', price:'23 000'},
							{img:'catalog4.jpg', text:'Бархатный топ', price:'12 000'},
							{img:'catalog1.jpg', text:'Бархатный топ', price:'12 000'},
							{img:'catalog2.jpg', text:'Бархатный топ', price:'9 000'},
						]
					each item in list
						.col-6.col-md-3
							.catalog-item
								.catalog-item__img-wrap
									a(href="#").catalog-item__img
										img(src="/upload/"+item.img, alt="")

									.catalog-item__wish
										+svg('ic-heart','ic-heart', '15', '13')

								.catalog-item__content
									.catalog-item__title
										a(href="#")= item.text

									.catalog-item__price= item.price

		.product-success-mobile__btn
			a(href="#").btn Перейти в корзину

	.info-product-popup.js-info-product-popup
		.info-product-popup__wrap
			.info-product-popup__top
				.info-product-popup__title Состав и уход

				.info-product-popup__close.js-info-product-popup-close
					+svg('ic-close','ic-close', '16', '16')

			.info-product-popup__main
				.info-product-popup__content
					p 100% Шерсть. Нижнее платье: 100% Шелк
					ul
						li Стирка запрещена
						li Отбеливание запрещено
						li Барабанная сушка запрещена
						li Утюжьте при температуре до 110 °C
						li Профессиональная сухая чистка с углеводородами
						
					p Берегите от контакта с острыми и грубыми предметами, которые могут оставить затяжки и пилли

				.info-product-popup__btn
					span.btn.btn_border.js-info-product-popup-close Закрыть
