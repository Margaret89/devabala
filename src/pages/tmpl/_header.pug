header.header.js-header(class=headerLight?'header_light':'')
	.container
		.row
			.col-4
				.main-menu-wrap
					.main-menu-wrap__btn.js-main-menu-open
						+svg('ic-menu','ic-menu', '38', '30')

					.main-menu-wrap__popup.js-main-menu-wrap-popup
						.main-menu-wrap__close.js-main-menu-close
							+svg('ic-close','ic-close', '24', '24')
							//- .ic-hamburger.active.js-main-menu-close
							//- 	span

						.main-menu-wrap__content
							.container
								.row
									.col-12.d-lg-none
										.main-menu-choose
											.main-menu-choose__item.js-main-menu-choose-item(data-id="1").active Категории
												.main-menu-choose__line
											.main-menu-choose__item.js-main-menu-choose-item(data-id="2") Коллекции
												.main-menu-choose__line

									.col-3.d-none.d-lg-block
										.main-menu-wrap__sect
											.main-menu-wrap__title
												a(href="#")  Каталог

									.col-lg-3
										.main-menu-wrap__sect.js-main-menu-wrap-sect.active(data-id="1")
											.main-menu-wrap__title.d-none.d-lg-block Категории

											.main-menu
												-
													var list=[
														{text:'все'},
														{text:'платья'},
														{text:'топы'},
														{text:'брюки'},
														{text:'жакеты'},
														{text:'корсеты'},
														{text:'блузки'},
														{text:'жилеты'},
													]
												each item in list
													.main-menu__item
														a(href="#")= item.text

									.col-lg-6
										.main-menu-wrap__sect.js-main-menu-wrap-sect(data-id="2")
											.main-menu-wrap__title.d-none.d-lg-block Коллекции

											.main-menu
												-
													var list=[
														{text:'вечерние образы'},
														{text:'круизная коллекция', status:'active'},
														{text:'На все случаи'},
														{text:'весна 2025'},
													]
												each item in list
													.main-menu__item(class=item.status?'active':'')
														a(href="#")= item.text

						.menu-sect.d-none.d-lg-block
							.container
								.row
									-
										var list=[
											{text:'Круиз', img:'menu-sect1.jpg'},
											{text:'Офис', img:'menu-sect2.jpg'},
											{text:'Досуг', img:'menu-sect3.jpg'},
											{text:'Весна 2025', img:'menu-sect4.jpg'},
										]
									each item in list
										.col-3
											a(href="#", style="background-image: url(/upload/"+item.img+")").menu-sect__item
												.menu-sect__text= item.text

						.main-menu-contacts.d-lg-none
							a(href="tel:+79274568282").main-menu-contacts__phone
								+svg('ic-call','ic-call', '22', '22')
								|+7(927)456-82-82

							.social
								a(href="#").social__item
									+svg('ic-instagram','ic-instagram', '20', '20')

								a(href="#").social__item
									+svg('ic-youtube','ic-youtube', '22', '19')

			.col-4
				.header__logo(class=pageId='main'?'d-md-none':'') DEVABALA

			.col-4
				.header-actions
					.header-actions__item
						+svg('ic-search','ic-search', '28', '28')

					.header-actions__item
						+svg('ic-bag','ic-bag', '24', '30')