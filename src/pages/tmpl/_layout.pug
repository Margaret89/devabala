			src: local('Tenor Sans'), local('Tenor-Sans'), url('../fonts/tenorsans/tenor_sans.woff2') format('woff2'), url('../fonts/tenorsans/tenor_sans.woff') format('woff');
			font-weight: 400;
			font-style: normal;
			font-display: swap;
			}
			.loader{
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			gap: 15px;
			width: 100vw;
			height: 100vh;
			background: #9E906D;
			color: #fff;
			text-align: center;
			position: fixed;
			top: 0;
			left: 0;
			z-index: 10000;
			}
			.loader.hide{display: none;}
			.loader__logo{
			margin-bottom: 58px;
			img{max-width: 80px;}
			}
			.loader__name{
			font-family: 'Inter', Arial, sans-serif;
			font-weight: 500;
			font-size: 86px;
			line-height: 1;
			}
			.loader__text{
			font-family: 'Tenor Sans', Arial, sans-serif;
			font-size: 1.6rem;
			margin-top: 20px;
			}

			.progress{width: 100%;}

			.progress__line-begin, .progress__line-last{
			stroke: #FCF9EC;
			stroke-opacity: 0.15;
			stroke-width: 2;
			}

			.progress__line-color-begin, .progress__line-color-last{
			stroke: #FCF9EC;
			stroke-opacity: 1;
			stroke-width: 2;
			stroke-dasharray: 1000;
			}

			.progress__line-color-begin{
			animation: dash-begin 2.5s linear alternate 1;
			stroke-dashoffset: 0;
			}

			.progress__line-color-last{opacity: 0;}

			.progress__line-color-last.active{
			opacity: 1;
			animation: dash-last 1s linear alternate 1;
			stroke-dashoffset: 1000;
			animation-fill-mode: forwards;
			}

			.progress__needle{fill:#FCF9EC;}

			@keyframes dash-begin {
			from{stroke-dashoffset: -922;}
			to{stroke-dashoffset: 0;}
			}

			@keyframes dash-last {
			from{stroke-dashoffset: 922;}
			to{stroke-dashoffset: 0;}
			}

