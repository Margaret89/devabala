			@font-face {
			font-family: 'Inter';
			src: local('Inter Medium'), local('Inter-Medium'), url('fonts/inter/Inter-Medium.woff2') format('woff2'), url('fonts/inter/Inter-Medium.woff') format('woff');
			font-weight: 500;
			font-style: normal;
			font-display: swap;
			}
			@font-face {
